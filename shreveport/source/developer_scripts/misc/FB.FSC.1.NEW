      IF DEBUG.MSG = '' THEN DEBUG.MSG='DEBUG POINT - BREAK IT!':CHAR(7)
      CRT @(0,0):DEBUG.MSG:
      INPUT NULL,1
      CRT @(0,0):SPACE(LEN(DEBUG.MSG)):
