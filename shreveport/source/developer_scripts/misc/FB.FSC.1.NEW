         IF FSC.REC<3,LINE> THEN
            DESC:= FSC.REC<3,LINE>'D2/'
         END ELSE
            DESC:= ' {OPEN} '
         END
         DESC:= SPACE(3)
         DESC:= FSC.REC<4,LINE>'R26(#6)':SPACE(2)
         DESC:= FSC.REC<6,LINE>'R26(#6)':SPACE(1)
         DESC:= FSC.REC<7,LINE>'R26(#6)':SPACE(3)
         DESC:= FSC.REC<8,LINE>'R26(#6)':SPACE(1)
         DESC:= FSC.REC<9,LINE>'R26(#6)':SPACE(1)
         DESC:= METHODS<FSC.REC<5,LINE>>'R#5':SPACE(2)
         DESC:= FSC.REC<1,LINE>
         PRINT DESC
      NEXT

      PRINTER OFF
      CALL ELINE("Table printed.")

      RETURN


